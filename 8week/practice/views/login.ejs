<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h1>로그인</h1>
    <form>
      <span>userId</span><input id="userId" type="text" /><br />
      <span>password</span><input id="password" type="text" /><br />
      <button type="button" onclick="onLogin()">로그인</button>
      <input id="userInfoId" type="text" /><br />
      <input id="userInfoName" type="text" /><br />
    </form>
    <script>
      function onLogin() {
        const userId = document.getElementById("userId").value;
        const password = document.getElementById("password").value;
        const userInfo = { userId, password };

        axios({
          method: "post",
          url: "/user/login",
          data: userInfo,
        })
          .then((result) => {
            console.log(result);
            const { userId, userName } = result.data;
            document.getElementById("userInfoId").innerHTML = userId;
            document.getElementById("userInfoName").innerHTML = userName;
          })
          .catch((err) => {
            console.log(err);
          });
      }
    </script>
  </body>
</html>
