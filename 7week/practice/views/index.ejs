<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>login</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <style>
    form {
      display: flex;
      flex-direction: column;
      width: 50%;
    }
    input {
      margin: 20px;
    }

    button {
      width: 50%;
    }
  </style>
  <body>
    <h1>naver</h1>
    <form>
      <div><span>아이디</span><input type="text" id="id" /></div>
      <div><span>비밀번호</span><input type="password" id="password" /></div>

      <button type="button" onclick="onClick()">로그인</button>
      <div id="confirm"></div>
    </form>
    <script>
      async function onClick() {
        const id = document.getElementById("id").value;
        const password = document.getElementById("password").value;
        const confirm = document.getElementById("confirm");
        console.log(id, password);
        axios
          .post("/user", {
            id,
            password,
          })
          .then((res) => {
            confirm.innerHTML = res.data;
            confirm.style.color = "blue";
          })
          .catch(function (error) {
            console.log(error);
            confirm.innerHTML = error.response.data;
            confirm.style.color = "red";
          });
      }
    </script>
  </body>
</html>
